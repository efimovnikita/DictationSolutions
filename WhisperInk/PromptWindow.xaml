<Window x:Class="WhisperInk.PromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit System Prompt" Height="300" Width="450"
        Background="#1E1E1E" Foreground="White"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="System Prompt (AnalyzeContext mode):" FontWeight="Bold" FontSize="12" Foreground="#AAAAAA" Margin="0,0,0,10"/>

        <TextBox Grid.Row="1" x:Name="txtPrompt" 
                 AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                 Background="#252526" Foreground="#E1E1E1" BorderBrush="#333333" Padding="8"/>

        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Button Content="Reset to Default" Width="110" Height="25" HorizontalAlignment="Left"
                    Click="BtnReset_Click" Background="#444444" Foreground="White" BorderThickness="0"
                    ToolTip="Вернуть стандартный системный промпт"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Width="80" Height="25" Margin="0,0,10,0" 
                        Click="BtnCancel_Click" Background="#333333" Foreground="White" BorderThickness="0"/>
                <Button Content="Save" Width="80" Height="25" 
                        Click="BtnSave_Click" Background="#4CAF50" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>