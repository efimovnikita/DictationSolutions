<Window x:Class="WhisperInk.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WhisperInk"
        mc:Ignorable="d"
        Title="History WhisperInk" Height="400" Width="500"
        Background="#1E1E1E" Foreground="White"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Background="#2D2D2D" Padding="10">
            <TextBlock Text="History" FontWeight="Bold" FontSize="14" Foreground="#AAAAAA"/>
        </Border>

        <!-- Список -->
        <ListBox Grid.Row="1" x:Name="HistoryList" 
                 Background="Transparent" BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 HorizontalContentAlignment="Stretch">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="#252526" CornerRadius="5" Margin="0,2" Padding="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <!-- Время -->
                                <ColumnDefinition Width="*"/>
                                <!-- Текст -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Кнопки -->
                            </Grid.ColumnDefinitions>

                            <!-- Время -->
                            <TextBlock Text="{Binding TimeStr}" Foreground="#666666" 
                                       VerticalAlignment="Center" FontSize="11"/>

                            <!-- Текст -->
                            <TextBlock Grid.Column="1" Text="{Binding Text}" 
                                       Foreground="#E1E1E1" TextWrapping="Wrap" 
                                       Margin="5,0,10,0" VerticalAlignment="Center"
                                       MaxHeight="60" TextTrimming="CharacterEllipsis"
                                       ToolTip="{Binding Text}"/>

                            <!-- Кнопки действий -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <!-- Копировать -->
                                <Button Content="❐" Width="25" Height="25" 
                                        Click="BtnCopy_Click" Tag="{Binding}"
                                        Background="#333333" Foreground="White" BorderThickness="0"
                                        ToolTip="Copy"/>

                                <Border Width="5"/>

                                <!-- Удалить -->
                                <Button Content="✕" Width="25" Height="25" 
                                        Click="BtnDelete_Click" Tag="{Binding}"
                                        Background="#333333" Foreground="#FF5555" BorderThickness="0"
                                        ToolTip="Delete"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>